style.
  body {
      font-family: Arial, Helvetica, sans-serif; 
  }
  
  .mail {
     width: 100%;
     margin: 100px 0;
  }
  
  .container {
      margin: auto;
      text-align: center;
      background-color: #111;
      padding: 20px;
      width: 500px;
      border-radius: 10px;
  }
  
  .title {
      color: #ddd;
      padding: 0;
      margin: 10px 0;
  }
  
  .message {
      color: #aaa;
  }
  
  .link {
      background-color: #000;
      color: #d6a;
      padding: 5px 10px;
      border-radius: 7px;
      text-decoration: none;
  }

